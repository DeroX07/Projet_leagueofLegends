<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image" href="/Content/Picture/logo_team/LEC.png" />
    <title>LoL LEC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Site.css">
</head>
<body>
    <nav class="navbar navbar-light navbar-fixed-top" style="background-color: #e3f2fd;">
        <div>
            <div class="container">
                <div class="navbar-header">
                    @Html.ActionLink("LoL LEC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("A propos", "Index", "About")</li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Equipes
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item">@Html.ActionLink("Equipes", "Index", "Equipe")</a>
                                <br />
                                <a class="dropdown-item">@Html.ActionLink("Joueurs", "Index", "Joueur")</a>
                            </div>
                        </li>
                        <li>@Html.ActionLink("Classements", "Index", "Classement")</li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - LoL LEC</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
